{
    "name": "ESPNow",
    "version": "0.0.0.1",
    "slug": "espnow",
    "description": "ESPNow to MQTT Bridge",
    "auto_uart": true,
    "url": "https://github.com/developideas/hassio-espnow",
    "startup": "before",
    "arch": [
        "aarch64",
        "amd64",
        "armhf",
        "i386"
    ],
    "boot": "auto",
    "map": [
        "share:rw",
        "config:rw"
    ],
    "options": {
        "mqtt": {
            "base_topic": "zigbee2mqtt",
            "server": "mqtt://homeassistant",
            "user": "my_user",
            "password": "my_password"
        },
        "serial": {
            "port": "/dev/ttyACM0"
        }
    }
}